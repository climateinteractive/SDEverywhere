// This contains the TypeScript configuration that is shared between
// testing (`tsconfig-test.json`) and production builds (`tsconfig-build.json`).
{
  "extends": "../../tsconfig-common.json",
  "compilerOptions": {
    "outDir": "./dist",
    // Don't emit .d.ts files
    "declaration": false,
    // We target ES6 for compatibility with older browsers.  This is
    // important as it ensures that newer language features like optional
    // chaining (`?.`) are transpiled so that they work in older browsers
    // (e.g. Safari in iOS 12).
    "target": "es6",
    "module": "es6",
    // Use "es2019" for flatMap
    "lib": ["dom", "es2019"],
    // XXX: Use bundler-friendly module resolution. This overrides the default
    // "node" resolution set in `tsconfig-common.json`. Apparently this is
    // required for Storybook to resolve `@storybook/addon-svelte-csf` imports.
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["svelte"]
  }
}
