//- Note: These mixins are kept in an external pug file to work around a
//- Svelte issue related to `each` and TypeScript, see:
//-   https://github.com/sveltejs/svelte-preprocess/issues/207

mixin rows
  +each(`$rows as row`)
    tr
      td.rownum(rowspan=2) { row.num }
      td.dim { row.minTimeL }
      td.value.dataset-color-0 { row.avgTimeL }
      td.dim { row.maxTimeL }
      td.plot
        DotPlot(viewModel!='{row.dotPlotL}' colorClass!='dataset-bg-0')
    tr
      td.dim { row.minTimeR }
      td.value.dataset-color-1 { row.avgTimeR }
      td.dim { row.maxTimeR }
      td.plot
        DotPlot(viewModel!='{row.dotPlotR}' colorClass!='dataset-bg-1')
