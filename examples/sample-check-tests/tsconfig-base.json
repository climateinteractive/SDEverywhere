// This contains the TypeScript configuration that is shared between
// testing (`tsconfig-test.json`) and production builds (`tsconfig-build.json`).
{
  "extends": "../../tsconfig-common.json",
  "compilerOptions": {
    "outDir": "./dist",
    // Use "es2020" for import.meta
    "module": "es2020",
    "target": "es2020",
    // Use "es2020" for Object.values()
    "lib": ["es2020"],
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["vite/client"]
  }
}
