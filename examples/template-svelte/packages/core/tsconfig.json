{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*"]
}
